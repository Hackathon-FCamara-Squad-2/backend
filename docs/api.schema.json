{
"openapi": "3.0.0",
  "info": {
    "title": "Orange Evolution - Hackathon Squad 2",
    "description": "Documentação da API desenvolvida durante o Hackathon da FCamara pelo Squad 2",
    "version": "1.0.0",
    "contact": {
      "email": "contact@garoze.com"
    }
  },
  "paths": {
    "/api/users/auth/register": {
      "post": {
        "tags": ["auth"],
        "summary": "Register a user",
        "description": "Register a new user to the plataform",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }

                },
                "example": {
                  "name": "user",
                  "email": "user@mail.com",
                  "password": "12345"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created"
          },
          "500": {
            "description": "User already exists"
          }
        }
      }
    },
    "/api/users/auth/login": {
      "post": {
        "tags": ["auth"],
        "summary": "Login into the plataform",
        "description": "Allow a user to login into the plataform",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }

                },
                "example": {
                  "email": "user@mail.com",
                  "password": "12345"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "E-mail or password invalid"
          }
        }
      }
    },
    "/api/users/me": {
      "get": {
        "tags": ["profile"],
        "summary": "Sees a user profile",
        "description": "Returns an object that contain all the information about an user",
        "security": [
          { "bearerAuth": [] }
        ],
        "responses": {
          "200": {
            "description": "User information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/E401"
          },
          "500": {
            "$ref": "#/components/responses/E500"
          }
        }
      }
    },
    "/api/users/me/courses": {
      "get": {
        "tags": ["courses"],
        "summary": "See all user courses",
        "description": "Return an list contain the user's courses information",
        "security": [
          { "bearerAuth": [] }
        ],
        "responses": {
          "200": {
            "description": "Courses information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/definitions/Trail"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/E401"
          },
          "500": {
            "$ref": "#/components/responses/E500"
          }
        }
      }
    },
    "/api/users/me/courses/{trailId}": {
      "get": {
        "tags": ["courses"],
        "summary": "See an user courses",
        "description": "Return an list contain an user courses information",
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "trailId",
            "in": "path",
            "description": "ID for a specific trail",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Course information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Trail"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/E401"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "example": "Course not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/E500"
          }
        }
      }
    },
    "/api/users/me/courses/sign": {
      "post": {
        "tags": ["courses"],
        "summary": "Register courses to an user",
        "description": "Create an relation with trails ids and an user",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "trailIdList": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "example": "Course not found"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/E401"
          },
          "500": {
            "$ref": "#/components/responses/E500"
          }
        }
      }
    },
    "/api/users/me/courses/unsign/{trailId}": {
      "delete": {
        "tags": ["courses"],
        "summary": "Remove a course from an user",
        "description": "Remove the relation between and trail id and a user",
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "trailId",
            "in": "path",
            "description": "ID for a specific trail",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Success"
          },
          "401": {
            "$ref": "#/components/responses/E401"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "example": "Course not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/E500"
          }
        }
      }
    },
    "/api/users/me/courses/{trailId}/progress": {
      "get": {
        "tags": ["progress"],
        "summary": "Get an user progress for a certain trail id",
        "description": "Return the user progress for a certain trail id as a percent number",
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "trailId",
            "in": "path",
            "description": "ID for a specific trail",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "progress": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/E401"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "example": "Course not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/E500"
          }
        }
      }
    }
  },
  "definitions": {
    "Date": {
      "type": "string",
      "example": "2022-11-02T23:00:49.578Z"
    },
    "Content": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "artigo", 
            "apostila", 
            "curso", 
            "desafio",
            "ferramenta", 
            "glossário", 
            "live", 
            "livro", 
            "podcast",
            "playlist", 
            "video" 
          ]
        },
        "creator": {
          "type": "string"
        },
        "duration": {
          "type": "integer"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "Trail": {
      "type": "object",
      "properties": {
        "banner": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "creator": {
          "type": "string"
        },
        "duration": {
          "type": "integer"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "John Doe"
        },
        "email": {
          "type": "string",
          "example": "johndoe@mail.com"
        },
        "createAt": {
          "$ref": "#/definitions/Date"
        }
      }
    },
    "E401": {
      "type": "object",
      "properties": {
        "message": {
          "example": "Unauthorized"
        }
      }
    },
    "E500": {
      "type": "object",
      "properties": {
        "message": {
          "example": "Internal error"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "E401": {
        "description": "Unauthorized request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/definitions/E401"
            }
          }
        }
      },
      "E500": {
        "description": "Internal error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/definitions/E500"
            }
          }
        }
      }
    }
  }
}

