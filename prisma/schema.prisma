// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  isAdmin  Boolean @default(false)

  createdAt DateTime @default(now())
}

enum ContentType {
  artigo
  live
  video
  glossario
  apostila
  livro
  curso
  podcast
  playlist
  ferramenta
  desafio
}

model Content {
  id       String      @id @default(uuid())
  title    String
  type     ContentType
  creator  String
  duration Int?
  url      String

  trailId  String
  trail    Trail       @relation(fields: [trailId], references: [id])
}

model Trail {
  id          String @id @default(uuid())
  title       String @unique
  banner      String
  description String
  creator     String
  duration    Int

  content Content[]
}
