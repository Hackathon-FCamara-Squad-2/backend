{
  "name": "backend",
  "version": "1.0.0",
  "description": "Hackathon-FCamara-Squad-2/back-end",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/shared/infra/http/server.ts",
    "dev": "nodemon --watch './src/' --exec 'ts-node ./src/shared/infra/http/server.ts' -e ts",
    "test": "jest --passWithNoTests",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:coverage": "yarn test --coverage",
    "prisma:format": "yarn prisma format",
    "db:push": "yarn prisma db push",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hackathon-FCamara-Squad-2/backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Hackathon-FCamara-Squad-2/backend/issues"
  },
  "homepage": "https://github.com/Hackathon-FCamara-Squad-2/backend#readme",
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "install": "^0.13.0",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.8",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "prisma": "^4.5.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --check",
      "prettier --write",
      "eslint --fix",
      "yarn test:staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "yarn commitlint --edit $1",
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "pre-push": "yarn test:coverage"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
